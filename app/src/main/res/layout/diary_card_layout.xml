<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:diary_card_view="http://schemas.android.com/tools"
    android:id="@+id/diary_card_view"
    android:layout_margin="15dp"
    diary_card_view:cardBackgroundColor="@android:color/transparent"
    diary_card_view:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/happy_face"
            android:id="@+id/entry_mood"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diary entry"
            android:paddingBottom="10dp"
            android:id="@+id/entry_title_text_view"/>

        <ImageView
            android:id="@+id/entry_image_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:scaleType="center" />
        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/entry_description_text_view"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>